spring:
  application:
    name: {{projectNameKebabCase}}
  
    datasource:
      url: jdbc:postgresql://localhost:5432/{{projectNameSnakeCase}}
      username: postgres
      password: postgres
      driver-class-name: org.postgresql.Driver
  
      jpa:
        hibernate:
          ddl-auto: update
          show-sql: true
          properties:
            hibernate:
              format_sql: true
              dialect: org.hibernate.dialect.PostgreSQLDialect

  # H2 Console (for development)
              h2:
                console:
                  enabled: true
                  path: /h2-console

                  server:
                    port: 8080

                    logging:
                      level:
                        root: INFO
                        {{packageName}}: DEBUG
